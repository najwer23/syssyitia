{% extends 'firstPage/baseFirstPage.html.twig' %}

{# {% block title %}{% endblock %} #}

{% block stylesheets %}
<link href="{{ asset('CSS/firstPage/firstPageLogin.css') }}" rel="stylesheet" />
<link href="{{ asset('CSS/firstPage/firstPageNav.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ=" crossorigin="anonymous"></script>
{% endblock %}


{% block body %}

    <section class="loginForm">
        <h2> Zmień hasło! </h2>

            
        <form action="{{ path('forgotPass') }}" method="post">
            <div class="iconWithInput">
                <div class="icon-ph"><i class="fas fa-at"></i></div>
                <input type="text" name="email"  placeholder="Adres email" onfocus="this.placeholder=''" onblur="this.placeholder='Adres email'">
            </div>

            <button name="btnForgotPass" type="submit" id="submitMail" class="btn wave">Zmień hasło</button>

            {% if errorCode|default(0) == 1 %}
                <div class="error">
                    <i class="fas fa-exclamation-triangle"></i> {{error}}
                </div> 
            {% endif %}
        </form>

        <script>
            $('form').submit(function() {
                $(this).find("button[type='submit']").prop('disabled',true);
            });

            if ( window.history.replaceState ) {
                window.history.replaceState( null, null, window.location.href );
            } 
        </script>

    </section> 

{% endblock %}
